{
  "extends": "@tsconfig/node18/tsconfig.json",
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "paths": {
      "@api/*": ["src/api/*"],
      "@app/*": ["src/app/*"],
      "@core/*": ["src/core/*"],
      "@dal/*": ["src/dal/*"],
    },
    "outDir": "./dist",
    "rootDirs": [
      "./src",
    ],
    "baseUrl": "./",
    "strict": true,
    "allowJs": false,
    "alwaysStrict": true,
    "target": "ES2020",
    "module": "CommonJS"
  }
}
